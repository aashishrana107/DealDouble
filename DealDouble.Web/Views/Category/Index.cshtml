<div class="row">
    <<div class="col-lg-12 m-2">
    <div class="float-left">
        <h2>Categories</h2>
    </div>
    <div class="float-right">
        <button class="btn btn-success" id="createButton">Create New Category</button>
    </div>
    <div id="listingArea">
        @{Html.RenderAction("Listing");}
    </div>
    <div class="modal fade" id="formModel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id="contentArea">
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Are you sure want to delete this record</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="mDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    $(".deleteButton").click(function () {
        debugger;
        $.ajax({
            url: "/Category/Delete/",
            method: "post",
            data: {
                ID: $(this).attr("data-recodID")
            }

        })
            .done(function (response) {
                debugger;
                $("#listingArea").html(response);
                $("#deleteModal").modal("toggle");
            });
    });



    $("#createButton").click(function () {
        debugger;
        $.ajax({
            url:  "/Category/Create/",
            method: "get"
        })
            .done(function (response) {
                $("#formModal").modal('toggle');
                $("#contentArea").html(response);
            });

    });
</script>


